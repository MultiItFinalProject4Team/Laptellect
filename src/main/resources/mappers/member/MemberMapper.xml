<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.laptellect.member.model.mapper.MemberMapper">
	<insert id="insertAddress" parameterType="addressDTO" useGeneratedKeys="true" keyProperty="addressId">
		INSERT INTO
			mem_delivery_address
		(
			  member_no
			, address_name
		<if test="recipientName != null">
			, recipient_name
		</if>
		<if test="postalCode != null">
			, postal_code
		</if>
		<if test="address != null">
			, address
		</if>
		<if test="detailAddress != null">
			, detail_address
		</if>
		<if test="tel != null">
			, recipient_phone
		</if>
		<if test="request != null">
			, request
		</if>
		)
		VALUES
		(
			  #{ memberNo }
			, #{ addressName }
		<if test="recipientName != null">
			, #{ recipientName }
		</if>
		<if test="postalCode != null">
			, #{ postalCode }
		</if>
		<if test="address != null">
			, #{ address }
		</if>
		<if test="detailAddress != null">
			, #{ detailAddress }
		</if>
		<if test="tel != null">
			, #{ tel }
		</if>
		<if test="request != null">
			, #{ request }
		</if>
		)
	</insert>
</mapper>