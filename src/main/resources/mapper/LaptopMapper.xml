<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="LaptopDAO">
    <select id="findLaptopsByTags" resultType="LaptopDTO">
        SELECT id, tag_data, tag_etc
        FROM tags
        WHERE tag_data IN
        <foreach item="tag" collection="tags" separator="," open="(" close=")">
            #{tag}
        </foreach>
        ORDER BY RAND()
        LIMIT 5
    </select>

